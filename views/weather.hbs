<div class="weather-search">
   <h1>Weather Search</h1>

   <form action="/" method="POST">
      <label for="location" id="label-location">Location: </label>
      <input type="text" id="input-location" name="location">
      <label for ="country" id="label-country">Country: </label>
      <input type="text" id="input-country" name="country">
      <input type="submit" id="button-submit"value="submit">
   </form>
</div>

{{#if err}}
   <h2>{{err}}</h2>
{{/if}}

{{#if listExists}}
<div class="weather-widget">
   <div class="date-time">
      <h3 id="date">{{date}}</h3>
      <h3 id="time">{{time}}</h3>
   </div>
   <div class="location-main">
      <i class="fa  fa-map-pin" style="font-size: 3em"></i>
      <button type="submit" id="location-button">{{name}}, {{country}}</button>
   </div>
   <div class="current-weather">
      <img src="images/icon{{icon}}.png" alt="image">
      <h2 id="temp">{{temp}}&deg;c </h2>
      <h2 id="description">{{description}}</h2>
   </div>
</div> 
{{/if}}